<h1>Listing notes</h1>
<h2>Search</h2>
<%= form_for :note, :url => { :action => "search"}, :method => "post" do |f| %>
  <%= f.text_field :title, :class => 'search-query' %>
  <%= f.submit 'Search' %>
<% end %>

<table class="table table-bordered">
  <thead>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </thead>
<tbody>
<% @notes.each do |note| %>
  <%= render note %>
<% end %>
</tbody>
</table>
<div class="digg_pagination">
    <div clas="page_info">
      <%= page_entries_info @notes %>
    </div>
    <%= will_paginate @notes, :container => false %>
  </div>

<br />

<%= link_to 'New Note', new_note_path %>
